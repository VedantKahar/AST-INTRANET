
@{ ViewBag.Title = "loginView"; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: url('images/AST bg.jfif') center center / cover no-repeat;
            background-size: cover;
            overflow: hidden; /* Prevent scrollbars */
        }

        .login-container {
            position: absolute;
            top: 0;
            right: 0;
            width: 30%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form-section {
            width: 100%;
            padding: 40px;
            display: flex;
            flex-direction: column;
            background: rgba(255, 255, 255, 0.7);
            box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .logo-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 150px;
            width: 100%;
            margin-bottom: 20px;
        }

            .logo-container img {
                max-width: 100%;
                max-height: 100%;
                object-fit: contain;
                margin: 40px;
            }

        .form-section h1 {
            font-size: 28px;
            color: #333;
            margin: 60px 0 30px;
            text-align: center;
        }

        .form-group {
            position: relative;
            margin-bottom: 20px;
        }

            .form-group input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 14px;
                outline: none;
                background: white;
            }

            .form-group label {
                position: absolute;
                top: 10px;
                left: 12px;
                font-size: 14px;
                color: #666;
                transition: 0.3s ease;
                pointer-events: none;
            }

            .form-group input:focus + label,
            .form-group input:not(:placeholder-shown) + label {
                top: -12px;
                left: 10px;
                font-size: 12px;
                color: #0056b3;
                background: #f4f6f8;
                padding: 0 5px;
            }

        .password-container {
            position: relative;
        }

            .password-container .toggle-password {
                position: absolute;
                top: 50%;
                right: 10px;
                transform: translateY(-50%);
                cursor: pointer;
                font-size: 14px;
                color: #666;
            }

        .forgotpasswordtext {
            font-size: 14px;
            color: #0056b3;
            text-decoration: none;
            transition: color 0.3s ease, transform 0.3s ease;
        }

            .forgotpasswordtext:hover {
                color: #004494;
                text-decoration: underline;
                transform: scale(1.05);
            }

        .actions-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 15px;
        }

        .new-user {
            font-size: 14px;
            color: #0056b3;
            text-decoration: none;
            cursor: pointer;
            transition: color 0.3s ease, transform 0.3s ease;
        }

            .new-user:hover {
                color: #004494;
                transform: scale(1.05);
            }

        .actions-container button {
            padding: 10px 20px;
            background-color: #0056b3;
            border: none;
            color: white;
            font-size: 14px;
            border-radius: 20px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .actions-container button:hover {
                background-color: #004494;
                transform: scale(1.05);
            }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="form-section">
            <div class="logo-container">
                <img src="images/AST-Logo.png" alt="Logo">
            </div>

            <h1>Login</h1>

            <div class="form-group">
                <input type="text" id="username" placeholder=" " required>
                <label for="username">Username or Email Address</label>
            </div>

            <div class="form-group">
                <input type="password" id="password" placeholder=" " required>
                <label for="password">Password</label>
            </div>

            <div>
                <a class="forgotpasswordtext" href="forgotpassword.html">Forgot password?</a>
            </div>

            <div class="actions-container">
                <a class="new-user" href="createaccount.html">Create an Account</a>
                <button type="button" onclick="validateLogin()">Log In</button>
            </div>
        </div>
    </div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const loginButton = document.querySelector("button[type='button']");

        // Add event listener to the login button
        loginButton.addEventListener("click", function () {
            const username = document.getElementById("username").value;
            const password = document.getElementById("password").value;

            const correctUsername = "q";
            const correctPassword = "q";

            // Perform validation on username and password
            if (username === correctUsername && password === correctPassword) {
                window.location.href = "Homepage/homepage.html";

            } else {
                alert("Invalid username or password. Please try again.");
            }
        });
    });
</script>

</body>
</html>
