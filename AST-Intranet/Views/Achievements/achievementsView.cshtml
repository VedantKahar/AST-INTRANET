
@{
    ViewBag.Title = "achievementsView";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Achievements</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/css/AchievementsStyles.css")">
</head>
<body>
    <div class="sidebar" id="sidebar">
        <h2>
            <img src="~/Images/icons/menu.png" alt="Toggle Sidebar" id="toggleSidebar">
            <span>Advanced Sys-Tek</span>
        </h2>
        <hr>
        <a href="@Url.Action("dashboardView", "Dashboard")">
            <img src="~/Images/icons/dashboard-icon.png" alt="Dashboard Icon"> <span>Dashboard</span>
        </a>
        <a href="@Url.Action("EmployeesView", "Employees")">
            <img src="~/Images/icons/employees-icon.png" alt="Employees Icon"> <span>Employees</span>
        </a>
        <a href="@Url.Action("updatesView", "Updates")">
            <img src="~/Images/icons/today-icon.png" alt="Updates Icon"> <span>Today's Updates</span>
        </a>
        <a href="@Url.Action("TownhallView", "Townhall")">
            <img src="~/Images/icons/meeting-icon.png" alt="Meeting Icon"> <span>Town Hall</span>
        </a>
        <a href="@Url.Action("ResourcesView", "Resources")">
            <img src="~/Images/icons/resources-icon.png" alt="Resources Icon"> <span>Resources</span>
        </a>
        <a href="@Url.Action("manualsView", "Manuals")">
            <img src="~/Images/icons/manual-icon.png" alt="Manual Icon"> <span>Manuals</span>
        </a>
        <a href="@Url.Action("AchievementsView", "Achievements")">
            <img src="~/Images/icons/achievements-icon.png" alt="Achievements Icon"> <span>Achievements</span>
        </a>
        <a href="@Url.Action("policiesView", "Policies")">
            <img src="~/Images/icons/policies-icon.png" alt="Policies Icon"> <span>Policies</span>
        </a>
        <a href="@Url.Action("EventsView", "Events")">
            <img src="~/Images/icons/events-icon.png" alt="Events Icon"> <span>Events</span>
        </a>
        <a href="@Url.Action("LoginView", "Accounts")">
            <img src="~/Images/icons/logout-icon.png" alt="Log Out Icon"> <span>Log Out</span>
        </a>
    </div>

    <div class="main-content">
        <div class="header">
            <img src="~/Images/images/AST Logo.png" alt="AST logo">
            <input type="text" placeholder="Search anything...">
            <div class="profile-container">
                <img src="~/Images/images/profile-pic.jfif" alt="Profile Picture" class="profile-img">
                <span class="user-name">q</span>
            </div>
        </div>

        <!-- Company Achievements Section -->
        <section class="achievements-section">
            <h2>Company Achievements</h2>
            <div class="achievement-cards-container">
                <div class="achievement-card">
                    <!-- Prev Button -->
                    <button class="prev-btn" onclick="prevAchievement()">&#10094;</button>

                    <!-- Image Slider -->
                    <div class="image-slider">
                        <div class="slider-content">
                            <!-- Achievement 1 -->
                            <div class="achievement-content" id="achievement1">
                                <img src="~/Images/images/AST bg.jfif" alt="Achievement 1">
                                <h3>Company Achievement 1</h3>
                                <p>Details about the achievement. This can include awards or recognitions received by the company.</p>
                            </div>
                            <!-- Achievement 2 -->
                            <div class="achievement-content" id="achievement2">
                                <img src="~/Images/images/AST-building.png" alt="Achievement 2">
                                <h3>Company Achievement 2</h3>
                                <p>Details about another achievement. This includes more information about the company's growth or progress.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Next Button -->
                    <button class="next-btn" onclick="nextAchievement()">&#10095;</button>
                </div>
            </div>
        </section>
 
        @*Employee Achievements Section*@
        <section class="employee-achievements-section">
            <h2>Employee Achievements</h2>
            <div class="achievement-cards-container">
                <div class="achievement-card">
                    <div class="image-slider">
                        <div class="slider-images">
                            <img src="../images/AST bg.jfif" alt="Company Achievement 1">
                            <img src="../images/AST building.png" alt="Company Achievement 2">
                            <!-- You can add more images here -->
                        </div>
                    </div>
                    <h3>Employee of the Month</h3>
                    <p>Employee Name: John Doe. A brief description of the employee's achievement.</p>
                </div>
                <div class="achievement-card">
                    <img src="../images/employee-achievement2.jpg" alt="Employee Achievement">
                    <h3>Top Performer Award</h3>
                    <p>Employee Name: Jane Smith. A brief description of their outstanding performance.</p>
                </div>
            </div>
        </section>

        <!-- Competition Winners Section -->
        <section class="competition-section">
            <h2>Competition Winners</h2>
            <div class="competition-cards-container">
                <div class="competition-card">
                    <img src="../images/AST bg.jfif" alt="Cricket Winner">
                    <div>
                        <h4>Cricket - Sports Week</h4>
                        <span>Winner: John Doe</span>
                    </div>
                </div>
                <div class="competition-card">
                    <img src="~/Images/images/carrom-winner.jpg" alt="Carrom Winner">
                    <div>
                        <h4>Carrom - Sports Week</h4>
                        <span>Winner: Jane Smith</span>
                    </div>
                </div>
                <div class="competition-card">
                    <img src="../images/volleyball-winner.jpg" alt="Volleyball Winner">
                    <div>
                        <h4>Volleyball - Sports Week</h4>
                        <span>Winner: Mark Johnson</span>
                    </div>
                </div>
                <div class="competition-card">
                    <img src="../images/table-tennis-winner.jpg" alt="Table Tennis Winner">
                    <div>
                        <h4>Table Tennis - Sports Week</h4>
                        <span>Winner: Emily Davis</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer Section -->
        <footer class="footer">
            &copy; 2024 Advanced Sys-Tek Limited | Contact Us | Feedback
        </footer>
    </div>

    <script src="@Url.Content("~/Scripts/script/AchievementsScript.js")"></script>

</body>
</html>
