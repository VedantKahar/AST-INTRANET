@model List<AST_Intranet.Models.Employee>

@{
    ViewBag.Title = "Employees in " + ViewBag.DepartmentName;
}

<h2>Employees in @ViewBag.DepartmentName Department</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Employee Code</th>
                <th>Employee Name</th>
                <th>Designation</th>
                <th>Email</th>
            </tr>
        </thead>
       <tbody>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.EmpCode</td>
            <td>@employee.EmpName</td>
            <td>@employee.Designation</td>
            <td>@employee.Email</td>
        </tr>
    }
</tbody>

    </table>
}
else
{
    <p>No employees found in this department.</p>
}
