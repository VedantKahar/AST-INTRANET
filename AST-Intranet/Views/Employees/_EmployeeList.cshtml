@model List<AST_Intranet.Models.Employee>

<h2>Employees in @ViewBag.DepartmentName Department</h2>

<table class="table">
    <thead>
        <tr>
            <th>Employee Code</th>
            <th>Name</th>
            <th>Designation</th>
            <th>DOB</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmpCode</td>
                <td>@employee.EmpName</td>
                <td>@employee.Designation</td>
                <td>@employee.Dob.ToString("yyyy-MM-dd")</td>
                <td>@employee.Email</td>
                <td>@employee.PhoneNo</td>
                <td>@employee.Address</td>
            </tr>
        }
    </tbody>
</table>
